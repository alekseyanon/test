!!! 5
%html
  %head
    = csrf_meta_tag
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(http-equiv="cleartype" content="on")
    %title(Smorodina)
    /%link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800&subset=latin,cyrillic' rel='stylesheet')
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    %script{type: 'text/javascript'}
      var addthis_config = {'data_track_addressbar':false};
    %script{src: '//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-51a45ad6548225f4', type: 'text/javascript'}
    = csrf_meta_tags
  %body{ class: page_class }
    = render 'layouts/promo', { greeting: controller_name == 'welcome' }
    %div.main
      %div.main__inner

        %div.slogan-user-panel-container
          = render 'layouts/user_panel'
          %div.slogan
            Путешествуй по России

        = render 'layouts/control_panel'

        - if controller_name == 'welcome' && !cookies[:first_time]
          = render 'layouts/promo_description'
        = yield
    = render 'modals/reg_login_modal'
  %script
    $(window).load(load_objects_count)

