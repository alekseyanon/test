      %span.events__pagination__dir__link__arrow
        &larr;
      %a.action-link{ href: week_path('last week monday', @date)}<
        Раньше
    %span.events__pagination__date
      7 октября – 1 октября
  %span.events__pagination__dir.events__pagination__dir_next
    %span.events__pagination__dir__link
      %a.action-link{ href: week_path('next week monday', @date)}<
        Позже
      %span.events__pagination__dir__link__arrow
        &rarr;
    %span.events__pagination__date
      15 октября – 21 октября

