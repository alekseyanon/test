= simple_form_for @geo_object do |f|
  - if @geo_object.errors.any?
    #error_explanation
      %h2= "#{pluralize(@geo_object.errors.count, "error")} prohibited this geo_object from being saved:"
      %ul
        - @geo_object.errors.full_messages.each do |msg|
          %li= msg
  .inputs
    = f.input :tag_list, input_html: { multiple: true, class: 'tag_list' }, collection: @categories
    = f.fields_for :images do |builder|
      = render 'events/image_fields', f: builder
    = link_to_add_fields 'add image', f, :images
  .actions
    = f.submit 'Save'
